{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/app/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/app/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "./apps",
  "generateOptions": {
    "spec": false
  },
  "projects": {
    "app": {
      "type": "application",
      "root": "apps/app",
      "entryFile": "main",
      "sourceRoot": "apps/app/src",
      "compilerOptions": {
        "tsConfigPath": "apps/app/tsconfig.app.json",
        "plugins": [{
          "name": "@nestjs/swagger",
          "options": {
            "classValidatorShim": true,
            "introspectComments": true,
            "dtoFileNameSuffix": [
              ".dto.ts", ".vo.ts"
            ]
          }
        }]
      }
    },
    "sys": {
      "type": "application",
      "root": "apps/sys",
      "entryFile": "main",
      "sourceRoot": "apps/sys/src",
      "compilerOptions": {
        "tsConfigPath": "apps/sys/tsconfig.app.json",
        "plugins": [{
          "name": "@nestjs/swagger",
          "options": {
            "classValidatorShim": true,
            "introspectComments": true,
            "dtoFileNameSuffix": [".dto.ts", ".vo.ts"]
          }
        }]
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    }
  }
}
